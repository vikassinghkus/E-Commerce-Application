@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient py-3 ml-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-3 text-white">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-action="CreateCategory" asp-controller="Category"><i class="bi bi-plus-circle"></i> Create Category</a>
            </div>
        </div>
        <table class="table table-bordered table-striped text-center">
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="EditCategory" asp-controller="Category" asp-route-Id="@item.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="DeleteCategory" asp-controller="Category" asp-route-Id="@item.Id">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
