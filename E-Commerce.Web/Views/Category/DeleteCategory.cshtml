@model Category

<div class="card shadow border mt-4">
    <div class="card-header bg-secondary bg-gradient py-3 ml-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="DeleteCategory" asp-controller="Category" method="post" class="row">
            <div class="border p-4">
                <input asp-for="Id" type="hidden" />
                <div class="row mb-3">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" disabled />
                </div>
                <div class="row mb-3">
                    <label asp-for="DisplayOrder"></label>
                    <input type="text" asp-for="DisplayOrder" class="form-control" disabled />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <input type="submit" class="btn btn-danger form-control" value="Delete" />
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

